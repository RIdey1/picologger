<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Syslog"
            id="eclipse_plugin">
      </category>
      <view
            name="Syslog View"
            icon="icons/sample.gif"
            category="eclipse_plugin"
            class="eclipse_plugin.views.SyslogView"
            id="eclipse_plugin.views.SyslogView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="eclipse_plugin.views.SyslogView">
         </view>
      </perspectiveExtension>
   </extension>
</plugin>
